<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox alignment="TOP_CENTER" prefHeight="524.0" prefWidth="669.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.demo2.HelloController">
    <padding>
        <Insets bottom="20.0" left="50.0" right="20.0" top="20.0" />
    </padding>

    <VBox  alignment="TOP_LEFT" style="-fx-padding: 50 0 0 0;">
        <Label fx:id="welcomeText" prefHeight="32.0" prefWidth="100.0" text="Login">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
    </VBox>

    <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 50;" >
        <Label text="Username:    " />
        <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="200.0" promptText="Enter your username" />
    </HBox>
    <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 50;" >
        <Label text="Password:     " />
        <PasswordField fx:id="password" prefHeight="25.0" prefWidth="200.0" promptText="Enter the password" />
    </HBox>
    <HBox>
        <Button text="Sign in" onAction="#onsigninbuttonclick"/>
    </HBox>

</VBox>

